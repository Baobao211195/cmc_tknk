<!-- </div> -->
</div>
<div class="form-group row form-btn-align" align="center" ng-show="showDataTable">
	<button type="submit" id="btnKetXuat" ng-click="Scope.KetXuat()"
		class="btn btn-primary">
		Kết xuất
	</button>
	<button type="button" id="btnIn" class="btn btn-info" ng-click="Scope.In()">
		In
	</button>
</div>